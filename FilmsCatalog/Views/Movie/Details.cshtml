@using Microsoft.AspNetCore.Identity
@model MovieViewModel
@{
    ViewData["Title"] = "Детали фильма";
}

<h1>@Model.Title</h1>
<div class="row">
    <div class="col-8">
        
        <div class="list-group">
            <div class="list-group-item">
                Режиссер - @Model.Director
            </div>
            <div class="list-group-item">
                Год выпуска - @Model.Year
            </div>
            <div class="list-group-item">
                Описание - @Model.Description
            </div>
        </div>
        
        <div class="mt-3">
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.Identity.Name == @ViewBag.Author)
                {
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-controller="Movie" asp-route-id="@Model.Id">Редактировать</a>
                }
            }
        </div>
    </div>
    <div class="col-4">
        @if (!string.IsNullOrWhiteSpace(Model.Poster))
        {
            <img src="@Url.Content("~/" + @Model.Poster)" alt="@Model.Title" width="400"/>
        }
        else
        {
            <div class="alert alert-info">Обложка фильма не была загружена</div>
        }
    </div>
</div>
